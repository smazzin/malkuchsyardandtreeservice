---
import siteData from '../data/site.json'
import Footer from '../components/Footer.astro'
import Head from '../components/Head.astro'
import JS from '../components/JS.astro'
import Navbar from '../components/Navbar.astro'

const {frontmatter} = Astro.props
---
<html lang={siteData.language}>
  <Head image={frontmatter.image || undefined} title={`${frontmatter.title} | ${siteData.author}`} />
  <body>
    <Navbar />
    <main id={frontmatter.title} class="">
      <div class="">
        <h1 class="">{frontmatter.title}</h1>
        <div class="">
          <slot />
        </div>
      </div>
    </main>
    <Footer />
    <JS />
  </body>
</html>
