---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline is:global>
  :root {
    --aw-font-sans: 'Roboto';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: hsl(88, 69%, 39%);
    --aw-color-secondary: hsl(74, 54%, 30%);
    --aw-color-accent: hsl(88, 69%, 39%);

    --aw-color-text-heading: hsl(177, 17%, 23%); 
    --aw-color-text-default: hsl(177, 17%, 23%);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: hsl(177, 17%, 23%);

    ::selection {background-color: hsl(155, 31%, 82%);}

  }

  .dark {
    --aw-font-sans: 'Roboto';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: hsl(88, 69%, 39%);
    --aw-color-secondary: hsl(74, 54%, 30%);
    --aw-color-accent: hsl(88, 69%, 39%);

    --aw-color-text-heading: hsl(177, 17%, 23%); 
    --aw-color-text-default: hsl(0, 0%, 94%);
    --aw-color-text-muted: hsla(215, 49%, 93%, 0.66);
    --aw-color-bg-page: var(--aw-color-bg-page-dark);

    ::selection {background-color: black; color: snow}

  }
</style>
