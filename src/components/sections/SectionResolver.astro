---
import type { CollectionEntry } from 'astro:content'
import Features from './Services.astro'
import About from './About.astro'

interface Props {
  afterTitle: string,
  sect: CollectionEntry<'sections'>,
  title: string,
  type: string
}

const { afterTitle, sect, title, type } = Astro.props
const { Content } = await sect.render()
---

{type === 'services' && <Features afterTitle={afterTitle} title={title}>
  <Content />
  </Features>}

  {type === 'about' && <About title={title}>
    <Content />
  </About>}
