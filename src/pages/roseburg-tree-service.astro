---
import HeroAlt from '~/components/widgets/HeroAlt.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Contact from '~/components/sections/Contact.astro'
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Roseburg, OR Tree Service | Tree Removal Experts',
	description: 'Complete tree care in Roseburg, OR. We offer professional tree removal, tree trimming, stump grinding, and more. Call us today for a free estimate!',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroAlt
    tagline="Professional & Safe"
    image={{
      src: '~/assets/images/crater-lake.jpg',
      alt: 'Picture of Crater Lake Near Roseburg, OR',
    }}
    title="Expert Tree Services in Roseburg, OR"
    subtitle="We provide professional and safe tree services in Roseburg, OR and surrounding areas. Roseburg is located in the heart of the Umpqua Valley and is known for its beautiful trees. known for the abundance of Douglas firs. This species of tree is the state tree of Oregon and one of the economically important trees in the Pacific Northwest territory inclusively. The area surrounding Roseburg has in the past, been a key lumbering region. And presently, Douglas fir contributes significantly to that industry."
    actions={[
      {
        target: '_self',
        text: 'Get a Free Estimate',
        href: '/get-a-free-estimate/',
        icon: 'tabler:chevron-right',
        variant: 'primary',
      },
    ]}
  />

    <!-- Steps2 Widget ****************** -->

    <Steps2
    title="What We Offer As Professional Arborists"
    subtitle="There are trees all over Roseburg. High-quality tree care is crucial for Roseburg residents because of the risk of tree branches breaking off and trees falling due to strong winds, freezing rain-caused ice on trees, and wet, heavy snow."
    isReversed={false}
    callToAction={{
      text: 'Get a Free Estimate',
      href: '/get-a-free-estimate/',
    }}
    items={[
      {
        title: 'Complete Tree Removals',
        description: 'Are you looking for a tree removal service in Roseburg, OR? We offer complete tree removals for residential and commercial properties.',
        icon: 'tabler:christmas-tree',
      },
      {
        title: 'Tree Trimming & Pruning',
        description:
          'Help maintain the health and beauty of your trees with our professional tree trimming and pruning services. We offer tree trimming for all types of trees.',
          icon: 'tabler:christmas-tree',
      },
      {
        title: 'Stump Grinding',
        description:
          'We offer professional stump grinding services in Roseburg, OR. We can remove stumps of all sizes, leaving your property looking clean and tidy.',
          icon: 'tabler:christmas-tree',
      },
      {
        title: 'Tree Cabling & Bracing',
        description:
          'Our skilled arborists can help protect your trees from storm damage with our tree cabling and bracing services. Call us today for a free estimate.',
          icon: 'tabler:christmas-tree',
      },
      {
        title: 'Tree Health & Insect Control',
        description:
          'For control of insects and diseases. We can help keep your trees healthy and thriving all year long.',
          icon: 'tabler:christmas-tree',
      },
    ]}
  />

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="Customer Testimonials"
    subtitle='Read testimonials from our satisfied clients'
    testimonials={[
      {
        testimonial: `Gary did a fantastic job. He promptly returned my initial phone call and had reasonable pricing (I called some other well known arborists but they were too busy to even return my calls- and others were booked months out). When I asked Gary questions about my mature pear and camellia trees, he had very knowledgable advice about their growth behavior, which I appreciated. Lastly, he showed up on time and got the job done very efficiently. Cleaned up all the mess before he left too! Will be calling for all my future tree trimming and pruning needs.`,
        name: 'Emily L.',
      },
      {
        testimonial: `Very friendly and knowledgable! Punctual and got the job done right. I appreciated the safety measures they took and their work ethic. I'll definitely be using them again when I need more tree work done!`,
        name: 'Marcos F.',
      },
      {
        testimonial: `Every time I've called for service they're here in just a few days. They are hard working, thorough, honest and friendly! We highly recommend using Malkuch Tree Service!`,
        name: 'S C.',
      },
    ]}
    callToAction={{
      target: '',
      text: 'See all our reviews on Google',
      href: 'https://maps.app.goo.gl/RNi1VWp485M9kw4i8?g_st=ic',
      icon: 'tabler:chevron-right',
    }}
  />

  <Contact 
  title="Contact us" 
  subtitle='Have a question or need an estimate?' 
/>
</Layout>
