<script type="text/partytown" src={`https://www.googletagmanager.com/gtag/js?id=${id}`}></script>
<script type="text/partytown">
  window.dataLayer = window.dataLayer || [];
  window.gtag = function gtag(){dataLayer.push();}
  gtag('js', new Date());

  gtag('config', id);
</script>